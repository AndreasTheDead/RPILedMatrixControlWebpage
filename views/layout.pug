doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    meta(name="description" content="Control your LED Matrix from an RasberryPi and a Webbrowser")
    meta(name="author" content="AndreasTheDead")
  body
    script.
      function togglenav() {
        var x = document.getElementById("navDemo");
        if (x.className.indexOf("w3-show") == -1) {
          x.className += " w3-show";
        } else {
          x.className = x.className.replace(" w3-show", "");
        }
      }
    <!-- Navbar -->
    div(class='w3-top')
      div(class='w3-bar w3-red w3-card w3-left-align w3-large')
        a(class='w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-red' href='javascript:void(0);' onclick='togglenav()' title='Toggle Navigation ')
          i(class='fa-bars')
        a(class='w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white' href='/') Home
        a(class='w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white' href='/editor') Editor
        a(class='w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white' href='/galery') Galery
    <!-- Navbar on small screens -->
    div(id='navDemo' class='w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium w3-large')
      a(class='w3-bar-item w3-button w3-padding-large' href='/') Home
      a(class='w3-bar-item w3-button w3-padding-large' href='/editor') Editor
      a(class='w3-bar-item w3-button w3-padding-large' href='/galery') Galery
    block content


    footer(class='w3-container w3-padding-64 w3-center w3-opacity')
      p Powered by
        a(href='https://github.com/AndreasTheDead/RPILedMatrixControlWebpage') RPI LED Matrix Controller
